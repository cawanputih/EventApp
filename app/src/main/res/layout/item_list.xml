<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/gambar"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/gambar"
        android:layout_toEndOf="@+id/gambar"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="5dp"
        android:id="@+id/namaevent"
        android:layout_width="240dp"
        android:textStyle="bold"
        android:textColor="#0000ff"/>

    <TextView
        android:text="TextView"
        android:layout_height="40dp"
        android:layout_below="@+id/namaevent"
        android:layout_alignLeft="@+id/namaevent"
        android:layout_alignStart="@+id/namaevent"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:id="@+id/tanggalevent"
        android:layout_width="240dp" />
</RelativeLayout>
